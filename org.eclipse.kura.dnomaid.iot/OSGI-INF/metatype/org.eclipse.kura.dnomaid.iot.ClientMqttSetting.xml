<MetaData xmlns="http://www.osgi.org/xmlns/metatype/v1.2.0" localization="en_us">
    <OCD id="org.eclipse.kura.dnomaid.iot.ClientMqttSetting"
         name="iot Dnomaid"
         description="MqttDnomaid --ClientMqtt setting--">
        <Icon resource="OSGI-INF/schedule.png" size="32"/>
        <!--Connection-->  		
  		<AD id="Enable"
            name="Enable"
            type="Boolean"
            cardinality="0"
            required="true"
            default="false"
            description="Enable"/>  		
 		<AD id="Server"
            name="Server"
            type="String"
            cardinality="0"
            required="true"
            default="localhost"
            description="Name server"/>	            			
  		<AD id="Port"
            name="Port"
            type="Integer"
            cardinality="0"
            required="true"
            default="1883"
            min="0"
            max="10000"
            description="Number Port"/>    
        <AD id="ClientId"
            name="ClientId"
            type="String"
            cardinality="0"
            required="true"
            default="ClientIdRaspberryPi"
            description="Name client"/>                        
        <AD id="CleanSession"
            name="CleanSession"
            type="Boolean"
            cardinality="0"
            required="true"
            default="false"
            description="CleanSession"/>
        <AD id="Username"
            name="Username"
            type="String"
            cardinality="0"
            required="true"
            default="guest"
            description="Username"/>        
        <AD id="Password"
            name="Password"
            type="String"
            cardinality="0"
            required="true"
            default="test12"
            description="Password"/>          		  		
    	<!--Add Device-->
    	<AD id="1TypeRelay" name="01-Type device" type="String" cardinality="0" required="false" default="none" description="Type device">
    		<Option label="None" 	value="none"/>
  			<Option label="SonoffS20" value="SonoffS20"/>
  			<Option label="XiaomiZNCZ04LM" value="XiaomiZNCZ04LM"/>  			
  		</AD>
    	<AD id="1NumberTypeDevice" name="01-Number Type Device" type="String" cardinality="0" required="false" default="1" description="Select Hour" >
    		<Option label="01" 	value="1" /><Option label="02" 	value="2" /><Option label="03" 	value="3" /><Option label="04" 	value="4" />
    		<Option label="05" 	value="5" /><Option label="06" 	value="6"/>
		</AD>    	
  		
    	
    </OCD>
    <Designate 
    pid="org.eclipse.kura.dnomaid.iot.ClientMqttSetting" 
    factoryPid="org.eclipse.kura.dnomaid.iot.ClientMqttSetting">
        <Object ocdref="org.eclipse.kura.dnomaid.iot.ClientMqttSetting"/>
    </Designate>
</MetaData>