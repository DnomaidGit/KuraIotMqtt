<MetaData xmlns="http://www.osgi.org/xmlns/metatype/v1.2.0" localization="en_us">
    <OCD id="org.eclipse.kura.DNOMAID.iot.ClientMqttSetting"
         name="clientMqttDnomaid"
         description="MqttDnomaid --ClientMqtt setting--">
        <Icon resource="OSGI-INF/mqtt.png" size="32"/>
        <!--Connection-->  		
  		<AD id="enable"
            name="Enable"
            type="Boolean"
            cardinality="0"
            required="true"
            default="false"
            description="Enable"/>  		
 		<AD id="server"
            name="Server"
            type="String"
            cardinality="0"
            required="true"
            default="localhost"
            description="Name server"/>	            			
  		<AD id="port"
            name="Port"
            type="Integer"
            cardinality="0"
            required="true"
            default="1883"
            min="0"
            max="100000"
            description="Number Port"/>    
        <AD id="clientId"
            name="ClientId"
            type="String"
            cardinality="0"
            required="true"
            default="ClientIdRaspberryPi"
            description="Name client"/>                        
        <AD id="cleanSession"
            name="CleanSession"
            type="Boolean"
            cardinality="0"
            required="true"
            default="false"
            description="CleanSession"/>
        <AD id="username"
            name="Username"
            type="String"
            cardinality="0"
            required="true"
            default="guest"
            description="Username"/>        
        <AD id="password"
            name="Password"
            type="String"
            cardinality="0"
            required="true"
            default="test12"
            description="Password"/>          		  		
		    	    	
    </OCD>
    <Designate 
    pid="org.eclipse.kura.DNOMAID.iot.ClientMqttSetting" >
        <Object ocdref="org.eclipse.kura.DNOMAID.iot.ClientMqttSetting"/>
    </Designate>
</MetaData>